---
layout: base.njk
title: Home
description: Technical influencer, speaker, and thought leader sharing insights on modern software development and engineering leadership.
---

<section class="hero">
    <div class="container">
        <div class="hero-content">
            <img src="/images/hero-headshot.jpg" alt="Andrew Krug" class="hero-image" />
            <h1>{{ home.hero.title }}</h1>
            <p>{{ home.hero.description }}</p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="{{ home.hero.primary_url }}" class="btn btn-primary">{{ home.hero.primary_cta }}</a>
                <a href="{{ home.hero.secondary_url }}" class="btn btn-secondary">{{ home.hero.secondary_cta }}</a>
            </div>
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">{{ home.what_i_do.title }}</h2>
        <p class="section-subtitle">
            {{ home.what_i_do.description }}
        </p>
        
        <div class="card-grid">
            {% for service in home.what_i_do.services %}
            <div class="card fade-in-up">
                <h3>{{ service.title }}</h3>
                <p>{{ service.description }}</p>
                <a href="{{ service.url }}" class="btn btn-primary">{{ service.cta }}</a>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="section" style="background: var(--surface);">
    <div class="container">
        <h2 class="section-title">{{ home.recent_highlights.title }}</h2>
        
        <div class="card-grid">
            {% for item in home.recent_highlights.items %}
            <div class="card" style="display: flex; flex-direction: column;">
                <h3>{{ item.title }}</h3>
                <p style="flex: 1;">{{ item.description }}</p>
                <small style="color: var(--text-secondary);">{{ item.period }}</small>
                <div style="margin-top: 1.5rem;">
                    <a href="{{ item.url }}" class="btn btn-primary">{{ item.cta }}</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <div style="text-align: center; max-width: 600px; margin: 0 auto;">
            <h2 class="section-title">{{ home.ready_to_connect.title }}</h2>
            <p class="section-subtitle">
                {{ home.ready_to_connect.description }}
            </p>
            <a href="{{ home.ready_to_connect.url }}" class="btn btn-primary">{{ home.ready_to_connect.cta }}</a>
        </div>
    </div>
</section>