---
layout: base.njk
title: Writing
description: Technical articles, insights, and thought leadership on software engineering, system architecture, and technology innovation.
---

<section class="full-width-hero" style="
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('/images/writing-hero.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    height: 70vh;
    min-height: 500px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    position: relative;
">
    <div class="container" style="position: relative; z-index: 2;">
        <div class="hero-content" style="background: rgba(0, 0, 0, 0.3); padding: 3rem 2rem; border-radius: 12px; backdrop-filter: blur(10px);">
            <h1 style="font-size: clamp(2.5rem, 5vw, 4rem); font-weight: 700; margin-bottom: 1rem; text-shadow: 3px 3px 6px rgba(0,0,0,0.8);">{{ writing.hero.title }}</h1>
            <p style="font-size: 1.25rem; margin-bottom: 2rem; max-width: 600px; margin-left: auto; margin-right: auto; text-shadow: 2px 2px 4px rgba(0,0,0,0.8);">{{ writing.hero.description }}</p>
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap;">
                <a href="{{ writing.hero.primary_url }}" class="btn btn-primary" style="box-shadow: 0 4px 8px rgba(0,0,0,0.3);" target="_blank">{{ writing.hero.primary_cta }}</a>
                <a href="#featured" class="btn btn-secondary" style="background: rgba(255,255,255,0.2); border: 2px solid rgba(255,255,255,0.8); color: white; box-shadow: 0 4px 8px rgba(0,0,0,0.3);">{{ writing.hero.secondary_cta }}</a>
            </div>
        </div>
    </div>
</section>

<section class="section" style="background: var(--surface);" id="featured">
    <div class="container">
        <h2 class="section-title">Featured Articles</h2>
        
        <div class="card-grid">
            {% for article in writing.featured_articles %}
            <div class="card">
                {% if article.featured %}
                <div style="display: flex; justify-content: between; align-items: start; margin-bottom: 1rem;">
                    <h3 style="margin: 0; flex: 1;">{{ article.title }}</h3>
                    <span style="background: var(--accent-color); color: white; padding: 0.25rem 0.75rem; border-radius: 1rem; font-size: 0.875rem; font-weight: 500;">Featured</span>
                </div>
                {% else %}
                <h3>{{ article.title }}</h3>
                {% endif %}
                <p style="color: var(--text-secondary); margin-bottom: 1rem; font-weight: 500;">
                    {{ article.publication }} • {{ article.date }} • {{ article.read_time }}
                </p>
                <p>
                    {{ article.description }}
                </p>
                {% if article.tags %}
                <div style="margin-top: 1.5rem;">
                    {% for tag in article.tags %}
                    <span style="display: inline-block; background: var(--surface); border: 1px solid var(--border); padding: 0.25rem 0.5rem; border-radius: 0.5rem; font-size: 0.75rem; margin-right: 0.5rem;">{{ tag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
                <div style="margin-top: 1.5rem;">
                    <a href="{{ article.url }}" class="btn btn-primary" style="font-size: 0.875rem; padding: 0.5rem 1rem;" {% if article.url != '#' %}target="_blank"{% endif %}>Read Article</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>

<section class="section">
    <div class="container">
        <h2 class="section-title">Recent Articles</h2>
        
        <div style="max-width: 800px; margin: 0 auto;">
            {% for article in writing.recent_articles %}
            <article style="{% if not loop.last %}border-bottom: 1px solid var(--border); {% endif %}padding: 2rem 0;">
                <h3 style="margin-bottom: 0.5rem;">
                    <a href="{{ article.url }}" style="text-decoration: none; color: var(--text-primary);" {% if article.url != '#' %}target="_blank"{% endif %}>{{ article.title }}</a>
                </h3>
                <p style="color: var(--text-secondary); margin-bottom: 1rem; font-size: 0.875rem;">
                    Published on {{ article.publication }} • {{ article.date }} • {{ article.read_time }}
                </p>
                <p style="margin-bottom: 1rem;">
                    {{ article.description }}
                </p>
                {% if article.tags %}
                <div>
                    {% for tag in article.tags %}
                    <span style="display: inline-block; background: var(--surface); border: 1px solid var(--border); padding: 0.25rem 0.5rem; border-radius: 0.5rem; font-size: 0.75rem; margin-right: 0.5rem;">{{ tag }}</span>
                    {% endfor %}
                </div>
                {% endif %}
            </article>
            {% endfor %}
        </div>
    </div>
</section>


<section class="section">
    <div class="container">
        <div style="text-align: center; max-width: 600px; margin: 0 auto;">
            <h2 class="section-title">{{ writing.call_to_action.title }}</h2>
            <p style="font-size: 1.125rem; color: var(--text-secondary); margin-bottom: 2rem;">
                {{ writing.call_to_action.description }}
            </p>
            
            <div style="display: flex; gap: 1rem; justify-content: center; flex-wrap: wrap; margin: 2rem 0;">
                {% for link in writing.call_to_action.links %}
                <a href="{{ link.url }}" class="btn {% if link.primary %}btn-primary{% else %}btn-secondary{% endif %}" {% if link.url != '/contact/' %}target="_blank"{% endif %}>{{ link.title }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>